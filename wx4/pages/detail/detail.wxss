/*view组件样式*/
.warp {
    display: flex;
    flex-direction: column;
}
.header , .footer {
   flex: 1; 
   background-color: black;
   color: white;
}

.content {
    display: flex;
    flex: 1;
}
.main {
    flex: 1;  
}
.left , .right {
    flex: 0 0 12rem;
    max-width: 100px;
}
.left {
    order: -1;
}

@media (max-width: 768px) {
    .content {
    flex-direction: column
    }
    .main,.left,.right {
        flex:auto;
    }
    .left , .right {
        max-width: 100%;
    }
}


/*添加背景颜色*/
.main{
    background-color: orange;
}
.left {
   
    background-color: blue;
}
.right {
    background-color: red;
}

/*
scroll-view 组件样式
*/
/*
水平
*/
.menu{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  width: 100%;
  background: #fff;
  border-top:#eee solid 1px;
  border-bottom:#eee solid 1px;
}

.top-nav{
    white-space: nowrap;
    display: flex;
}
.top_btn {
    display: inline-block;
    margin: 10px;
    font-size: 1rem;
    color: gray;
}
.top_btn_select {
    color: red;
    font-size: 1.5rem;
}
/*
垂直
*/
.content{
    height: 100%;
    width: 100%;
    margin-top:45px; 
}
.cell {
    display: inline-block;
    margin: 10px 20px;
    width: 90%;
    height: 10rem;
    border: #e9e9e9 solid 1px;
    text-align: center;
    background-color: red;
    color: white;
}

/*
swiper 组件样式
*/
.swiper_class {
    width: 100%;
    height: 10rem;
}
.slide-image{
    width: 100%;
    height: 100%;
}